  email = willis.rh@gmail.com

[color]
  ui = auto

[push]
  default = current

[commit]
	verbose = true

[color "branch"]
  current = yellow bold
  local = green bold
  remote = cyan bold

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold

[core]
  editor = vim

[merge]
  tool = vscode

[mergetool "vscode"]
  cmd = code --wait $MERGED

[diff]
  tool = vscode

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[alias]
  current-branch = rev-parse --abbrev-ref HEAD
  unstage = reset --soft HEAD^
  set-upstream = !git branch --set-upstream-to=origin/"$(git current-branch)" "$(git current-branch)"
  who = shortlog -n -s --no-merges
  log-graph = log --graph --all  --decorate --oneline --pretty='format:%Cgreen%h%Creset %an - %s'

